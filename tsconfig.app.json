{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "noUnusedLocals": false,        // ðŸ‘ˆ DESACTIVA error por imports no usados
    "noUnusedParameters": false     // ðŸ‘ˆ DESACTIVA error por parÃ¡metros no usados
  },
  "include": ["src"]
}
